
@model IEnumerable<BrandsDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalar Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int number = 0;}
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{number++;}@number</td>
                        <td>@item.Brand</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55px;"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.Count</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

