@model CoreMvcOnlineTicariOtomasyon.Models.BillPen


@{
    ViewData["Title"] = "Details";
}


<br />
<h2>Fatura kalem sayfası</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>

        <tr>
            <td>@Model.Id</td>
            <td>@Model.Description</td>
            <td>@Model.Amount</td>
            <td>@Model.QuantityPerUnit</td>
            <td>@Model.Price</td>
        </tr>

</table>
<div>
    <a asp-action="createbillpen" class="btn btn-default" style="background-color: darksalmon;">Yeni Kalem Girişi</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye geri dön</a>

</div>
