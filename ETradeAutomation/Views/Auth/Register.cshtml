@model CoreMvcOnlineTicariOtomasyon.Models.Current

@{
    Layout = null;
}

<div class="login-form login-form-left">
    <div class="agile-row">
        <h3>Kayıt formu</h3>
        <div class="login-agileits-top">
            <form asp-action="register">
                <input type="text" class="name" asp-for="FirstName" placeholder="Adınız" required />
                <input type="text" class="name" asp-for="LastName" placeholder="Soyadınız" required />
                <input type="text" class="name" asp-for="City" placeholder="Yaşadığınız şehir" required />
                <input type="email" class="email" asp-for="Email" placeholder="E-posta adresiniz" required />
                <input type="password" class="password" asp-for="Password" placeholder="Şifreniz" required />
                <div class="login-check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> <a href="#">Kuralları </a>okudum, kabul ediyorum.</label>
                </div>
                <input type="submit" value="Kayıt ol">
            </form>
        </div>
    </div>
</div>

